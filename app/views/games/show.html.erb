<div class="game-show-page">
  <h2><%= @game.name %></h2>

  <p><strong>Platform:</strong> <%= @game.platform %></p>
  <p><strong>ESRB Rating:</strong> <%= @game.esrb_rating %></p>
  <p><strong>Genre:</strong> <%= @game.genre %></p>
  <p><strong>User Score:</strong> <%= @game.score %>/10</p>

  <ul id="game-comments">
    <h3>Comments</h3>
    <% @game_comments.each do |comment| %>
      <li><%= comment.comment %></li>
    <% end %>
  </ul>
  <%= react_component 'ShowPage' %>
</div>
